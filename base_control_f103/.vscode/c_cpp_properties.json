{
    "configurations": [
        {
            "name": "STM32F103",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE",
                "USE_HAL_DRIVER",
                "STM32F407VE"
            ],
            // Windows 
            // "compilerPath": "${env:ARMGCC_DIR}/arm-none-eabi-gcc.exe",
            // Linux
            "compilerPath": "usr/bin/arm-none-eabi-gcc",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-arm",
            "compilerArgs": [
                "-mcpu=cortex-m0",
                "-mthumb"
            ]
        }
    ],
    "version": 4
}